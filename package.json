{
    "name": "eventforce",
    "version": "1.0.0",
    "description": "Eventforce",
    "main": "index.js",
    "directories": {
        "test": "test"
    },
    "scripts": {
        "start": "npm run build.server && npm run build.client && npm run serve",
        "setup": "cd app/server && npm i && cd ../client && npm i",
        "serve": "cd app/server && npm run serve",
        "start.server": "cd app/server && npm run start",
        "start.client": "cd app/client && npm run start",
        "build.server": "cd app/server && npm run build",
        "build.client": "cd app/client && ng build -prod -aot"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sean-perkins/eventforce.git"
    },
    "keywords": [
        "salesforce",
        "nodejs",
        "angular",
        "angular-cli",
        "event-manager"
    ],
